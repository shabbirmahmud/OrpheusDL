# Include the README and license files
include README.md
include LICENSE*

# Include requirements
include requirements.txt

# Include configuration files
recursive-include config *.json
recursive-include config *.py

# Include all Python files in modules
recursive-include modules *.py
recursive-include modules *.json
recursive-include modules *.txt
recursive-include modules *.md

# Include all Python files in utils
recursive-include utils *.py

# Include all Python files in orpheus
recursive-include orpheus *.py

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so

# Exclude development files
exclude .gitignore
exclude .git*
exclude *.log
exclude .pytest_cache
exclude .coverage
exclude .tox
exclude .venv
exclude venv
exclude env
